@{
    ViewBag.Title = "Play";
}

<div id="bodyContainer" ng-app="CoffeeInvoiceApp">
    <section id="content">
        <div class="container" >
            <div class="row">
                <div class="flip-container text-center col-md-12" ng-controller="CoffeeInvoiceCtrl" ng-init="getCustomer()">
                    <div class="back">
                        <p class="lead">{{customName}}</p>                        
                    </div>
					<div class="error">
						<p>{{title}}</p>
					</div>                    
               
					<input type="number" ng-model="custom.customID" />
					<button class="btn btn-info btn-lg" ng-click="getCustomer()">Get Customer</button>
				</div>
            </div>
        </div>
    </section>
</div>